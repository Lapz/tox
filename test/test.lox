print "Guess the number!";

while (true) {
  var secret_number = random(1,50);
  print "Please input your guess.";
  var guess = io.readline();
  print "You guessed: " + guess;

  if (to_int(guess) > secret_number) {
    print "Too big!";
  }

  if (to_int(guess) < secret_number) {
    print "Too small!";
  }

  if (to_int(guess) == secret_number) {
    print "You win!";
    break;
  }

}
